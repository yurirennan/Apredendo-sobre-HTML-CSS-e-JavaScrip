{% extends "layout.njk" %}

{% block head %}
    <title>Sobre -
        {{ user_data.name }}</title>
{% endblock %}

{% block content %}

    <div id="wrapper">
        <img src="{{ user_data.avatar_url }}" alt="{{ user_data.name }}">
        <h1>{{user_data.name}}</h1>
        <h2>{{user_data.role}}</h2>
        <p>{{user_data.description}}</p>
    </div>
    <div class="links">
        {% for link in user_data.links %}
            <a href="{{link.url}}" target="_blank">{{link.name}}</a>
        {% endfor %}
    </div>

{% endblock %}